@model List<StudentInfo.Models.Domain.Student>
@{
}
<div class="container bg-light">
    <div class="row">
        <div class="col">
         <h3> Show All Students </h3>
        </div>
        <div class="col">
            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Department</th>
                            <th scope="col">Sesion</th>
                            <th scope="col">Action</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Department</td>
                                <td>@student.Session</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="AdminStudent" asp-action="Edit"
                                       asp-route-id="@student.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else{
                <p>No Student found</p>
            }
        </div>
        
    </div>
</div>